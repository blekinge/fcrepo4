{
    "name" : "repo",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : [],
        "default" : "default",
        "allowCreation" : true
    },
    "storage" : {
        "cacheName" : "FedoraRepository",
        "cacheConfiguration" : "config/infinispan/basic/infinispan.xml",
        "binaryStorage" : {
            "type" : "cache",
            "dataCacheName" : "FedoraRepositoryBinaryData",
            "metadataCacheName" : "FedoraRepository"
        }
    },
    "externalSources" : {
      "fileSystem" : {
        "classname" : "org.modeshape.connector.filesystem.FileSystemConnector",
        "directoryPath" : "target/test-classes/test-objects",
        "readonly" : false,
        "extraPropertiesStorage": "json",
        "cacheTtlSeconds" : 5,
        "projections" : [ "default:/files => /" ]
      }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "servlet" }
        ]
    },
	"node-types" : ["fedora-node-types.cnd"]
}